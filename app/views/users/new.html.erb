<div class="container">
  <h1>Sign up</h1>
  <%= form_for @user do |f| %>

      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@user.errors.count, "error") %> prohibited
              this user from being saved:
            </h2>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <p>
        <%= f.label :username %><br>
        <%= f.text_field :username, minlength: 3, maxlength: 20 %>
      </p>

      <p>
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name, presence: true, maxlength: 200 %>
      </p>

      <p>
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, presence: true, maxlength: 200 %>
      </p>

      <p>
        <%= f.label :email %><br>
        <%= f.email_field :email, presence: true, maxlength: 200 %>
      </p>

      <p>
        <%= f.label :password %><br>
        <%= f.password_field :password, minlength: 6, maxlength: 20 %></p>
      </p>

      <p>
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation, minlength: 6, maxlength: 20 %>
      </p>

      <p>
        <%= f.submit 'Sign up' %>
      </p>
  <% end %>

</div>
